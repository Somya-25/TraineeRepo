<script src="~/Scripts/DataTables/jquery.dataTables.min.js">

    $(document).ready(function () {
        $('#dataTable').DataTable({
            "ajax": {
                "url": "/Home/GetData",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "UserId" },
                { "data": "FullName" },
                { "data": "UserEmail" },
                { "data": "CivilIdNumber" },
                { "data": "CarLicense" },
                {
                    mRender: function (data, type, row) {
                        return '<a href="" class="table-edit" data-id="editUser" onclick="EditUserDetails(' + row.Id + ')">EDIT</a> / <a href="" class="editor_remove" onclick="Delete(' + row.Id + ')">Delete</a>'
                    }
                }
            ]
        });
    });
</script>
